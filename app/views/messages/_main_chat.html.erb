<div class="main_header">
  <div class="left_header">
    <div class="header_title">hogekuga</div>
  </div>
  <div class="rigth_header">
    <div class="chat_end_btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="main_chat_body">
  <div class="chat_box">
    <div class="upper_box">
      <div class="chat_user_name">Tom</div>
      <div class="chat_date">2020/3/31(Wed) 12:34:56</div>
    </div>
    <div class="under_box">
      <div class="chat_text">おはよう</div>
    </div>
  </div>
  <% @messages.each do |message| %>
    <%= message.content %>
  <% end %>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>